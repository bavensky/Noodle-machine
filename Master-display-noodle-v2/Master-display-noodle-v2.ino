// read coin vending
void coin() {
  unsigned long duration;
  //  for (int i = 0; i <= 10; i++)  {
  duration = pulseIn(PINSG6, HIGH, 1000000);
  cal_coin = duration / 1000.00;
  Serial.print("DelT=");
  Serial.print(cal_coin);
  Serial.println(" ms");
  if (cal_coin > 2) {
    count = count + 1;
  }

  if (cal_coin == 0) {
    if (count > 3 && count < 7) {
      sum = sum + 5;
    }
    if (count > 7) {
      sum = sum + 10;
    }
    count = 0;
  }
}



